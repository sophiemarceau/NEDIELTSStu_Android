<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="学习详情"
            android:background="@color/white"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btn_back_conncetion_savetest"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:src="@drawable/select_imgview_back"
            />

        <TextView
            android:id="@+id/txt_commit_conncetion_savetest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:textSize="14sp"
            android:text="提交" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/font_color" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/themegrey"
        
        >
        <ListView 
            android:layout_marginTop="8dp"
            android:id="@+id/listview_connection_savetest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            
            ></ListView>
        
        
    </RelativeLayout>
    


</LinearLayout>
