<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <ImageButton
            android:id="@+id/imageview_back"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:src="@drawable/select_imgview_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="筛选"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_screen_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="确定"
            android:textColor="@color/describe_color" />
    </RelativeLayout>

   
 <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/font_color" />
 <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/themegrey" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="按版块筛选" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/themegrey" />

    <GridView
        android:id="@+id/gridview_screen_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:horizontalSpacing="10dp"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="10dp" >

    </GridView>

        <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_marginTop="5dp"
        android:background="@color/themegrey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="按格式筛选" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/themegrey" />

    <GridView
        android:id="@+id/gridview_screen_date_source"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:scrollbars="none"
                 android:listSelector="#00000000"
        android:verticalSpacing="10dp" >
    </GridView>

        <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_marginTop="5dp"
        android:background="@color/themegrey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="按时间筛选" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/themegrey" />

    <GridView
        android:id="@+id/gridview_screen_date_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:scrollbars="none"
                 android:listSelector="#00000000"
        android:verticalSpacing="10dp" >
    </GridView>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="时间范围" />

        <TextView
            android:id="@+id/edittext_starttime"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_noselected"
            android:text="" 
            android:textSize="12dp"
            android:gravity="center"/>

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
                  android:layout_marginLeft="5dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/edittext_endtime"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_noselected"
            android:text=""
            android:textSize="12dp"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/themegrey" />

    
    

</LinearLayout>