<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/share_choose_bg"
    android:orientation="vertical"
    android:padding="10dip" >

    <TextView
        android:id="@+id/textview_dialog_take_picture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/dialog_item_choose_gray"
        android:gravity="center"
        android:text="拍照"
        android:textColor="#000000"
        android:textSize="16dip" />

    <TextView
        android:id="@+id/textview_dialog_album"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/dialog_item_choose_gray"
        android:gravity="center"
        android:text="从相册选择"
        android:textColor="#000000"
        android:textSize="16dip" />

    <TextView
        android:id="@+id/textview_dialog_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@drawable/dialog_item_choose_black"
        android:gravity="center"
        android:text="取消"
        android:textColor="#ffffff"
        android:textSize="16dip" />

</LinearLayout>