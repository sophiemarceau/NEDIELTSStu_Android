<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingRight="10dp"
        >

        <ImageView
            android:id="@+id/chatimg_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/mor" />

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/chatimg_icon"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/chat_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/chat_title"
            android:layout_below="@+id/chat_title"
            android:text=""
            android:singleLine="true"
            android:layout_marginTop="7dp"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/chat_unRead_qipao"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/chat_title"
            android:layout_toLeftOf="@+id/chat_title"
            android:gravity="center"
            android:background="@drawable/qipao"
            android:textColor="#fff"
            android:text="1"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>