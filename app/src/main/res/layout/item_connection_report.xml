<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/item_txt_num_connection_report"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:text="第1题"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_txt_answer_connection_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_txt_num_connection_report"
            android:layout_alignBottom="@+id/item_txt_num_connection_report"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="120dp"
            android:text="C"
            android:textSize="16sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_txt_num_connection_report"
        android:layout_marginLeft="20dp"
        android:paddingBottom="15dp"
        android:text="正确答案"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_txt_trueanswer_connection_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/item_txt_answer_connection_report"
        android:text="asdasdas"
        android:paddingBottom="10dp"
        android:textSize="16sp" />

    </RelativeLayout>
</RelativeLayout>